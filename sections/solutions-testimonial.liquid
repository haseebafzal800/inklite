{% if section.settings.enable_testimonial %}
<div class="testimonial-container">
	{% for block in section.blocks %}
    	{% if block.type == "testi_list" %}
        <div class="t-container">
            {% if block.settings.testi_title != blank %}<h2>{{block.settings.testi_title}}</h2>{% endif %}
            <div class="image">
                {% if block.settings.testi_img != blank %}
                <img src="{{block.settings.testi_img | img_url : 'master' }}" alt="{{ block.settings.testi_img.alt | escape }}">
                {% endif %}
            </div>
            {% if block.settings.testi_name != blank %}
            <h3>{{block.settings.testi_name}}</h3>
            {% endif %}
            {% if block.settings.testi_content != blank %}
            <q>{{block.settings.testi_content}}</q>
            {% endif %}
        </div>
    	{% endif %}
    {% endfor %}
</div>
{% endif %}

{% schema %}
{
  "name": "Solution Testimonials",
  "settings": [
  	{
      "type": "header",
      "content": "Testimonials"
    },
    {
      "type": "checkbox",
      "id": "enable_testimonial",
      "label": "Enable Testimonials?",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "testi_list",
      "name": "Testimonial Items",
      "settings": [
        {
          "type" : "text",
          "id": "testi_title",
          "label" : "Testimonial Title",
          "default":"Testimonials"
        },
        {
          "type": "image_picker",
          "id": "testi_img",
          "label": "Person Photo"
        },
        {
          "type": "text",
          "id": "testi_name",
          "label": "Person Name",
          "default": "Joe Smith"
        },
        {
          "type": "textarea",
          "id": "testi_content",
          "label": "Content",
          "default": "We love the natural light and clean look, GREAT WORK!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Solution Testimonials",
       "blocks": [

      ]
    }
  ]
}
{% endschema %}

